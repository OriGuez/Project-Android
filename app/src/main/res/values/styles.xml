<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/viewtube_red</item>
        <item name="colorPrimaryDark">@color/viewtube_red</item>
        <item name="colorAccent">@color/viewtube_red</item>
        <item name="buttonStyle">@style/ViewtubeButton</item>
    </style>

    <!-- Custom button style -->
    <style name="ViewtubeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/viewtube_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
