<resources>
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!-- Base application theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/viewtube_red</item>

<!--<item name="colorPrimaryDark">#0099FF</item>-->
        <item name="colorAccent">#0099FF</item>


        <item name="buttonStyle">@style/ViewtubeButton</item>
    </style>

    <style name="ViewtubeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">#0099FF</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="MyDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorOnPrimary">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButtonStyle</item>
    </style>
    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
