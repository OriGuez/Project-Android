<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/thumbnailImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="2dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/publisherPicInList"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_def_user"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/editVidButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/editvid" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/publisherTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="3dp"
            android:paddingBottom="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/uploadDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="3dp"
            android:paddingBottom="4dp"
            android:text="Upload Date"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/viewsTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="3dp"
            android:paddingBottom="4dp"
            android:text="Views"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
